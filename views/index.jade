extend layout

block content
    div.extension-adv
        span The extension that let you know about most popular and trending extensions for Brackets IDE
        a.install(href="https://github.com/dnbard/brackets-extension-rating") Learn more

    div.search
        input.search-input(placeholder="Search for extension")


    div.center
        div.widget
            h2.center.icon-graph-trend &nbsp;Extensions
            p.center
                span randomly selected from the&nbsp;
                a(href="/extensions", title="Top 100 extensions by download count").bold Top 100
            div.separator
            each extension in downloadsExtensionList
                p.extension
                    a(href="/extension/#{extension._id}", title="#{extension.description}")
                        span.position #{extension.position}
                        span.name #{extension.title || extension._id}
                    span.downloads.number &nbsp; #{extension.totalDownloads}

        div.widget
            h2.center.icon-graph-trend &nbsp;Extensions
            p.center by number of online users
            div.separator
            each extension in extensionsOnline
                p.extension
                    a(href="/extension/#{extension.name}")
                        span.name #{extension.title}
                    span.downloads &nbsp;
                        span(title="Online users of #{extension.title}") #{extension.online}
                        span.muted(title="Overall number of users for #{extension.title}")
                            span &nbsp/&nbsp
                            span.number #{extension.maxUsers}

        div.widget
            h2.center.icon-star-two &nbsp;Extensions
            p.center by number of stars at GitHub
            div.separator
            each extension in extensionsStars
                p.extension
                    a(href="/extension/#{extension._id}")
                        span.name #{extension.title || extension._id}
                    span.downloads &nbsp;
                        span(title="#{extension.title || extension._id} stars") #{extension.stars}

        div.widget
            h2.center.icon-torso &nbsp;Authors
            p.center by number of released extensions
            div.separator
            each author in authors
                p.author
                    a(href="/author/#{author.link}", title="#{author.name}") #{author.name}
                    span.downloads &nbsp; #{author.count}

        div.widget
            h2.center.icon-chart-line &nbsp;Stats
            div.separator
            p
                span.bold In registry:
                span &nbsp;#{count} extensions, #{authorsCount} authors
            p.bold Newest extension:
                div
                    a(href="/extension/#{newestExtension._id}", title="#{newestExtension.description}") #{newestExtension.title}
                    span &nbsp;by&nbsp;
                    a(href="/author/#{newestExtension.author}") #{newestExtension.author}
            p.bold Extension with most downloads:
                div
                    a(href="/extension/#{downloadsExtension._id}", title="#{downloadsExtension.description}") #{downloadsExtension.title}
                    span &nbsp;by&nbsp;
                    a(href="/author/#{downloadsExtension.author}") #{downloadsExtension.author}
            p
                span.bold Users online:
                span &nbsp;#{online}
            p
                a(href="//www.liveinternet.ru/click",target="_blank")
                    img(src="//counter.yadro.ru/logo?14.11",title="LiveInternet: number of pageviews for 24 hours, of visitors for 24 hours and for today is shown",alt="",border="0",width="88",height="31")

        div.widget
            h2.center.icon-tag-2 &nbsp;Keywords
            p.center keywords with the biggest selection
            div.separator
            each tag in tags
                p.tag
                    a(href="/tag/#{tag.name}", title="#{tag.name}") #{tag.name}
                    span.downloads &nbsp; #{tag.count}

block scripts
    script(type='text/javascript', src='../js/index.js')
