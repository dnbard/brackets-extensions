doctype html
html
    head
        title #{title} - Brackets Extensions
        link(rel='stylesheet', href='/style.min.css')
        script(src="//use.edgefonts.net/source-sans-pro:n3,n4,n6,i3,i4;source-code-pro:n4.js")
        script(type='text/javascript', src='http://cdn.jsdelivr.net/jquery/2.1.1/jquery.min.js')
        script(type='text/javascript', src='http://cdn.jsdelivr.net/lodash/2.4.1/lodash.min.js')

        block head

        script(type='text/javascript', src='//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-544776812df55ac7')

    body
        header
            h1
                a(href="/")
                    span.logo
                    span Brackets Extensions
                a(href="/extensions").link TOP-100
                a(href="/about").link About
                if (user !== undefined)
                    if (!user)
                        a.right(href="#{githubOAuthPath}?client_id=20424fe39882a6b99f90") Sign in via GitHub
                    else
                        a.right(href="/dashboard")
                            if (user.avatar_url)
                                img.image(src="#{user.avatar_url}&s=16")
                                span &nbsp;
                            span.name #{user.login}

        .container-wrapper
            .container
                .main-content
                    block content

        footer
            p.center Made with â™¥ and JavaScript
            script.
                new Image().src = "//counter.yadro.ru/hit?r"+escape(document.referrer)+((typeof(screen)=="undefined")?"":";s"+screen.width+"*"+screen.height+"*"+(screen.colorDepth?screen.colorDepth:screen.pixelDepth))+";u"+escape(document.URL)+";"+Math.random();

        block scripts
